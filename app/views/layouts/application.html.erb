<!DOCTYPE html>
<html>
<head>
  <title>Baby World - Special Orders</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
<% if user_signed_in? %>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#" style="color: white">Baby World</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Customers", customers_path %> </li> 
            <li><%= link_to "Orders", orders_path %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Settings", settings_path %></li>
          </ul>
            <div class="navbar-right">
            <span class="navbar-brand" style="color:white"> Welcome <%= current_user.first_name %>! </span>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class:"navbar-brand") %></div>
        </div>
      </div>
    </div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container-fluid">
  <div class="col-md-1 col-sm-0"></div>
  <div class="col-sm-12 col-md-10">
    <%= yield %>
  </div>
</div>
<% else %>
  <div class="row"><%= image_tag "baby_world_logo.gif" %></div>
  <div class="row">
    <div class="col-md-5"> </div>
      <div class="col-md-2">
        <%= render "devise/sessions/new" %>
         
        <h2>Create New User</h2>

        <%= form_for(@user, :as => :user, url: user_registration_path, method: :post) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :first_name %><br />
          <%= f.text_field :first_name %></div>

          <div><%= f.label :last_name %><br />
          <%= f.text_field :last_name %></div>

          <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true %></div>

          <div><%= f.label :password %><br />
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %></div>

          <div><%= f.label :admin%>:
          <%= f.select :admin, [true, false] %> </div><br >

          <div><%= f.submit "Create User" %></div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>

</body>
</html>
