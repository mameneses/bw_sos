<h2>Sign in</h2>

<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.text_field :email %> <br>
  <%= f.password_field :password %><br>
  <%= f.check_box :remember_me %><br>
  <%= f.label :remember_me %><br>
  <%= f.submit 'Sign in' %><br>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>