<h2> Create your order for  <%= "#{@customer.first_name}" %> <%= "#{@customer.last_name}" %> </h2>

<%= form_for @order, url: {action:"create"} do |f| %>
  <%= f.label :placed_by %>:
  <%= f.text_field :placed_by, value: "#{@user.first_name}" %><br>

  <%= f.label :placed_date%>:
  <%= f.date_field :placed_date, value: "#{Time.now.asctime}"  %><br>

  <%= f.label :follow_up_date %>:
  <%= f.date_field :follow_up_date, value: "#{Time.now.asctime}"%><br>

  <%= f.label :store_location %>:
  <%= f.select :store_location, ["Oakland","San Bruno","San Rafael"], value:"Oakland" %><br>

  <%= f.text_field :customer_id, type: "hidden", value: "#{@customer.id.to_i}" %>

  <%= f.submit "Start Order", class:"btn-primary" %>

<% end %>







